@model EmployeeCrud.Models.Employee
@using EmployeeCrud.Models.Enums;

@{
    bool isEdit = Model.Id != 0;
    ViewData["Title"] = isEdit ? "Edit" : "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="CreateOrEdit" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h4 class="col">@(isEdit ? "Edit" : "New") Employee</h4>
                @if (Model.Id > 0)
                {
                    <label>Employee ID: @Model.Id</label>
                }
            </div>
            <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LName" class="control-label"></label>
                <input asp-for="LName" class="form-control" />
                <span asp-validation-for="LName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="@Html.GetEnumSelectList<GenderEnum>()" class="form-control form-select">
                    <option selected="selected" value="">Please select Gender</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>

            <div class="row mt-2">
                <div class="col-md-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" asp-for="isStudent" value="true">Student
                        </label>
                        <span asp-validation-for="isStudent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" asp-for="isFulltime" value="true">Full Time
                        </label>
                        <span asp-validation-for="isFulltime" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Active" class="form-check-label">Still work here?&nbsp;&nbsp;</label>
                <div class="form-check form-check-inline">
                    <input asp-for="Active" class="form-check-input" type="radio" value="true" />
                    <label asp-for="Active" class="form-check-label">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="Active" class="form-check-input" type="radio" value="false" checked />
                    <label asp-for="Active" class="form-check-label">No</label>
                </div>
                <span asp-validation-for="Active" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="row mt-4 justify-content-center">
                <div class="col-md-4">
                    <button class="btn btn-danger w-100" onclick="Javascript:window.history.back(1); return false;">Cancel</button>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
