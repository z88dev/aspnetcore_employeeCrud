@model IEnumerable<EmployeeCrud.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateOrEdit" class="btn btn-success">Create Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
               <div class="btn-group" role="group">
                   <a asp-action="CreateOrEdit" asp-route-id="@item.Id" class="btn btn-info mright-2">Edit</a>
                   <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mright-2">Details</a>
                   <form asp-action="Delete" asp-route-id="@item.Id">
                      <button type="submit" class="btn btn-danger"
                         onclick="return confirm('Are you sure to delete this record ID='+@item.Id+' ?')">
                      Delete</button>
                   </form>
               </div>
            </td>
        </tr>
}
    </tbody>
</table>
